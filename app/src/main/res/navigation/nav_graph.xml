<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/songFragment">

    <fragment
        android:id="@+id/songFragment"
        android:name="com.godwin.saltmusic.ui.fragments.songs.SongsFragment"
        android:label="@string/songs"
        tools:layout="@layout/fragment_songs">
        <action
            android:id="@+id/actionSongsToDetails"
            app:destination="@+id/detailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.godwin.saltmusic.ui.fragments.album.AlbumFragment"
        android:label="@string/albums"
        tools:layout="@layout/fragment_songs">
        <action
            android:id="@+id/actionAlbumToDetails"
            app:destination="@+id/detailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/artistFragment"
        android:name="com.godwin.saltmusic.ui.fragments.artist.ArtistFragment"
        android:label="@string/artists"
        tools:layout="@layout/fragment_songs">
        <action
            android:id="@+id/actionArtistToDetails"
            app:destination="@+id/detailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.godwin.saltmusic.ui.fragments.playlist.PlaylistFragment"
        android:label="@string/favourite"
        tools:layout="@layout/fragment_songs">
        <action
            android:id="@+id/actionFavToDetails"
            app:destination="@+id/detailFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.godwin.saltmusic.ui.fragments.detail.DetailsFragment"
        android:label="@string/playlists"
        tools:layout="@layout/fragment_details">

    </fragment>
</navigation>